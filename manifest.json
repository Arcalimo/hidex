{
  "manifest_version": 3,
  "name": "HideX",
  "description": "Hide elements you donâ€™t want to see on any site",
  "version": "0.1.0",
  "author": "Alberto Server",
  "action": {
    "default_title": "HideX",
    "default_popup": "src/views/popup/popup.html"
  },
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content/content-script.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage",
    "activeTab"
  ],
  "commands": {
    "toggle-mode": {
      "suggested_key": {
        "default": "Ctrl+Shift+H",
        "mac": "Command+Shift+H"
      },
      "description": "Toggle HideX selection mode"
    }
  }
}
